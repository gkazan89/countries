<h1>Edit Country</h1>
<form action="/countries/<%= @country.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    Name: <input type="text" name="name" value="<%= @country.name %>">
  </div>
  <div>
    Capital: <input type="text" name="capital" value="<%= @country.capital %>">
  </div>
  <div>
    Founded: <input type="text" name="founded" value="<%= @country.founded %>">
  </div>
  <input type="submit" value="Edit country">
</form>